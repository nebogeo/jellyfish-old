<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape>
      <gradient android:endColor="#00dddddd"
                android:startColor="#00dddddd" android:angle="270" />
      <padding android:left="10dp" android:top="10dp"
               android:right="10dp" android:bottom="10dp" />
    </shape>
  </item>
    <item android:state_focused="true">
      <shape>
        <gradient android:endColor="#00eeeeee"
                  android:startColor="#00eeeeee" android:angle="270" />
        <padding android:left="10dp" android:top="10dp"
                 android:right="10dp" android:bottom="10dp" />
      </shape>
    </item>
    <item>
      <shape>
        <gradient android:endColor="#00ffffff"
                  android:startColor="#00ffffff" android:angle="270" />
        <padding android:left="10dp" android:top="10dp"
                 android:right="10dp" android:bottom="10dp" />
      </shape>
    </item>

</selector>
